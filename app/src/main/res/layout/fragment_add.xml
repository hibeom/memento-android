<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="addViewModel"
            type="com.pinkcloud.memento.add.AddViewModel" />
    </data>

    <com.pinkcloud.memento.common.SuperMotionLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".add.AddFragment"
        app:layoutDescription="@xml/fragment_add_scene">

        <com.pinkcloud.memento.common.MemoView
            android:id="@+id/memoView"
            style="@style/MemoView"
            android:elevation="@dimen/card_elevation"
            app:isCacheEnable="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/button_flip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/card_content_margin"
            android:background="@color/transparent"
            android:src="@drawable/ic_flip"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_goneMarginEnd="@dimen/search_margin"
            android:layout_marginBottom="@dimen/search_margin"
            app:tint="@color/black" />

    </com.pinkcloud.memento.common.SuperMotionLayout>
</layout>