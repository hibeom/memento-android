<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PhotoButton">
        <item name="android:src">@drawable/ic_camera</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="TakePhotoButton">
        <item name="android:src">@drawable/ic_take_photo</item>
        <item name="android:tint">@color/white</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="EditCaption">
        <item name="android:background">@null</item>
        <item name="android:gravity">top</item>
        <item name="android:hint">@string/enter_caption</item>
        <item name="android:inputType">textMultiLine</item>
    </style>

    <style name="Toolbar">
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="actionMenuTextColor">@color/black</item>
        <item name="colorPrimary">@color/white</item>
    </style>

    <style name="Dialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
    </style>

    <style name="TextTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MemoView">
        <item name="elevation">@dimen/card_elevation</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="layout_constraintDimensionRatio">3:4</item>
        <item name="layout_constraintWidth_percent">0.93</item>
    </style>
</resources>