<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PhotoButton">
        <item name="android:src">@drawable/ic_camera</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="TakePhotoButton">
        <item name="android:src">@drawable/ic_take_photo</item>
        <item name="android:tint">@color/white</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="EditCaption">
        <item name="android:background">@null</item>
        <item name="android:gravity">top</item>
        <item name="android:hint">@string/enter_caption</item>
        <item name="android:inputType">text</item>
    </style>
</resources>