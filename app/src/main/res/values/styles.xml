<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PhotoButton">
        <item name="android:src">@drawable/ic_camera</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="TakePhotoButton">
        <item name="android:src">@drawable/ic_take_photo</item>
        <item name="android:tint">@color/white</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="EditCaption">
        <item name="android:background">@null</item>
        <item name="android:gravity">top</item>
        <item name="android:hint">@string/enter_caption</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:textSize">@dimen/content_text</item>
    </style>

    <style name="TextContent">
        <item name="android:textSize">@dimen/content_text</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="Toolbar">
        <item name="android:textColorSecondary">@color/conflowerblue</item>
        <item name="colorPrimary">@color/white</item>
    </style>

    <style name="Dialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
    </style>

    <style name="TextTitle">
        <item name="android:textSize">@dimen/title_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextButton">
        <item name="android:textSize">@dimen/title_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/conflowerblue</item>
        <item name="android:padding">@dimen/text_button_padding</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DialogButton">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/conflowerblue</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="MemoView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="layout_constraintDimensionRatio">3:3.7</item>
        <item name="layout_constraintWidth_percent">0.93</item>
    </style>

    <style name="TransparentDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="FlipButton">
        <item name="android:text">@string/flip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:backgroundTint">@color/transparent</item>
    </style>

</resources>